	fi
else
	V_CCOPT="$OonS"
	V_DEFINE="$V_DEFINE -DNDEBUG"
	if test "$CC" = gcc ; then
		V_CCOPT="$V_CCOPT -Wall -Wno-write-strings"
	fi
fi

