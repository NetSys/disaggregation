# This is required by configure.in.tcl to provide absolute pathnames for 
# tclsh, and configure.in.tail to absolutize V_INCLUDES and V_LIBS.
absolutize() {
    case $1 in 
    -L*) p=`echo $1 | sed 's/^-L//'` ;;
    -I*) p=`echo $1 | sed 's/^-I//'` ;;
    *) p=$1 ;;
    esac
    d=`dirname $p`
    f=`basename $p`
    ad=`(
	cd $d
	pwd
    )`
    case $1 in
    -L*) echo -L$ad/$f ;;
    -I*) echo -I$ad/$f ;;
    *) echo $ad/$f ;;
    esac
}
